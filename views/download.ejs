<!doctype html>
<html>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@5.15.4/css/fontawesome.min.css" integrity="sha384-jLKHWM3JRmfMU0A5x5AkjWkw/EYfGUAGagvnfryNV3F9VqM98XiIH7VBGVoxVSc7" crossorigin="anonymous">
   <title>Node File Downloader</title>
    
    <body>
        <header>
            <%- include('./nav.ejs'); %>
        </header>
        <main>
            <div class="row">
              <div class="col-sm-12">
                <div class="jumbotron">
                  <h1>Node Express EJS File Downloader</h1>
                  <ul style="list-style: none;">
                    <% if(myLink.length == 0){%> <li><h2>There is no file</h2></li>   <%}else{%>
                      <% myLink.forEach(function(link) { %>
                        <li>
                          <a href="<%= link.replace('downloads/','') %>" target="_blank" download><%= link %></a>
                        </li>
                      <% })%>
                      <%} %>
                  </ul>
                </div>
              </div>
            </div>
            </main>
    </body>
</html>